#!/bin/bash

###############################################################################
# Add to PATH
###############################################################################
export PATH=/usr/local/bin:/usr/bin:/usr/sbin:/bin:/sbin:~/bin/:~/scripts:~/Apps/eclipse:~/Apps/google_appengine
export ANDROID_SDK=~/Downloads/adt-bundle-linux/sdk
export PATH=$ANDROID_SDK/tools:$ANDROID_SDK/platform-tools:$PATH
export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:/usr/lib/i386-linux-gnu:/usr/lib/x86_64-linux-gnu:/usr/lib32:/lib:/lib32:/lib64

###############################################################################
# Confiure terminal
###############################################################################
# Fix backspace key
stty erase ^?

###############################################################################
# CSCOPE env vars
###############################################################################
export EDITOR=vim
export CSCOPE_EDITOR=vim


###############################################################################
# Get some shell functions
###############################################################################
# project setup
. ~/scripts/project.sh

###############################################################################
# Source alias file
###############################################################################
. ~/.alias


###############################################################################
# go to current project
###############################################################################
ifuse_setup
