#!/bin/bash

###############################################################################
# Add to PATH
###############################################################################
export PATH=/usr/local/bin:/usr/bin:/usr/sbin:/bin:/sbin:~/bin/:~/scripts:~/Apps/eclipse:~/Apps/google_appengine
export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib:/lib:/home/simonv/sources/boost_1_52_0/stage/lib

###############################################################################
# Confiure terminal
###############################################################################
# Fix backspace key
stty erase ^?

###############################################################################
# CSCOPE env vars
###############################################################################
export EDITOR=vim
export CSCOPE_EDITOR=vim


###############################################################################
# Get some shell functions
###############################################################################
# project setup
. ~/scripts/project.sh

###############################################################################
# Source alias file
###############################################################################
. ~/.alias


###############################################################################
# go to current project
###############################################################################
ifuse_setup
